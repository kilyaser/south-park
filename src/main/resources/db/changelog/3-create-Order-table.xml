<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create-order-table" author="VMeloshnikov">
        <createTable tableName="order">
            <column autoIncrement="true" name="id" type="bigint">
                ‹constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="customer" type="bigint">
                ‹constraints nullable="false"/>
            </column>
            <column name="created" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="completion_date" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="TIMESTAMP WITH TIME ZONE">

            </column>
            <column name="stage" type="varchar(255)">
                ‹constraints nullable="false"/>
            </column>
            <column name="total_cost" type="bigint">
                ‹constraints nullable="false"/>
            </column>
            <column name="task" type="bigint">
                ‹constraints nullable="false"/>
            </column>
            <column name="orderitems" type="bigint">
                ‹constraints nullable="false"/>
            </column>
            <column name="order_title" type="varchar(255)">
                ‹constraints nullable="false"/>
            </column>
            <column name="is_complected" type="boolean">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>