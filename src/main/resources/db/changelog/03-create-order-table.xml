<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="order-table" author="d.berlov">
        <createTable tableName="order" schemaName="public">
            <column name="id" autoIncrement="true" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="created" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="modified" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="total_cost" type="Decimal">
                <constraints nullable="false"/>
            </column>
            <column name="completion" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="order_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="is_complected" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>